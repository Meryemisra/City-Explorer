<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= city.name %> - Şehir Keşif Forumu
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Şehir Keşif Forumu</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if (user) { %>
                        <li class="nav-item">
                            <span class="nav-link">Hoş geldin, <%= user.user_metadata.username %></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Çıkış Yap</a>
                        </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/register">Kayıt Ol</a>
                            </li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h1 class="card-title">
                            <%= city.name %>
                        </h1>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <%= city.country %>
                        </h6>
                        <p class="card-text">
                            <%= city.description %>
                        </p>
                    </div>
                </div>

                <h3 class="mb-3">Gezilecek Yerler</h3>
                <% if (user) { %>
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Yeni Yer Ekle</h5>
                            <form action="/places" method="POST">
                                <input type="hidden" name="city_id" value="<%= city.id %>">
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="name" placeholder="Yer Adı" required>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="address" placeholder="Adres" required>
                                </div>
                                <div class="mb-3">
                                    <textarea class="form-control" name="description" placeholder="Açıklama"
                                        required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Ekle</button>
                            </form>
                        </div>
                    </div>
                    <% } %>

                        <div class="row">
                            <% places.forEach(place=> { %>
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= place.name %>
                                            </h5>
                                            <h6 class="card-subtitle mb-2 text-muted">
                                                <%= place.address %>
                                            </h6>
                                            <p class="card-text">
                                                <%= place.description %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Yorumlar</h5>
                        <% if (user) { %>
                            <form action="/comments" method="POST" class="mb-4">
                                <input type="hidden" name="city_id" value="<%= city.id %>">
                                <div class="mb-3">
                                    <textarea class="form-control" name="content" placeholder="Yorumunuzu yazın..."
                                        required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Yorum Yap</button>
                            </form>
                            <% } %>

                                <% comments.forEach(comment=> { %>
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h6 class="card-subtitle mb-2 text-muted">
                                                <%= comment.username %>
                                            </h6>
                                            <p class="card-text">
                                                <%= comment.content %>
                                            </p>
                                            <small class="text-muted">
                                                <%= new Date(comment.created_at).toLocaleDateString() %>
                                            </small>
                                        </div>
                                    </div>
                                    <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>